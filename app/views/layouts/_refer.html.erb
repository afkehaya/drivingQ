<div ng-app="337ae2ff0b57418b83fe4293be6d4609App" ng-controller="337ae2ff0b57418b83fe4293be6d4609Controller">
  <div ng-click="open()" class="btn btn-lg btn-warning">Refer A Friend</div>
  <script type="text/ng-template" id="actionwins-referral-modal">
  <style>
    .text-center {
      text-align: center;
    }
    .share-modal {
