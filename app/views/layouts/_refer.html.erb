  <div ng-click="open()" onmouseover="this.style.cursor='hand';" onmouseout="this.style.cursor='pointer'" class="btn btn-lg btn-info">Refer A Friend</div>
  <script type="text/ng-template" id="actionwins-referral-modal">
  <style>
    .text-center {
      text-align: center;
